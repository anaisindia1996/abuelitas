<div class="container py-5">
  <h1 class="text-center pb-3">Find an Experience</h1>
  <br>
  <div class="text-center">
  <button class="btn-dark rounded">Cooking</button>
  <button class="btn-dark rounded">Dancing</button>
  <button class="btn-dark rounded">Storytelling</button>
  <button class="btn-dark rounded">Listenning</button>
  <button class="btn-dark rounded">Advising</button>
  <button class="btn-dark rounded">Knitting</button>
  <button class="btn-dark rounded">Others</button>
</div>
  <hr>
    <div class="container">
      <div class="row">
        <% @experiences.each do |experience| %>
          <div class="col p-3">
            <div class="card" style="width: 18rem;">
             <% if experience.photo.attached? %>
              <%= cl_image_tag experience.photo.key, class: "card-img-top" %>
                <% else %>
              <img src= <%= experience.images %> >
                <% end %>
                <div class="card-body">
                  <h5 class="card-title"><%= experience.activity_name %> with <%= experience.grandma_name.first(25) %></h5>
                  <p class="card-text"><%= experience.description.first(100) %>...</p>
                  <p class="card-text"><strong>$<%= experience.price %></strong></p>
                  <%= link_to "Learn More", experience_path(experience), class: "btn btn-outline text-center" %>
                </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
